{
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-len": ["error", { "code": 160 }],
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-console": "off"
  }
}
